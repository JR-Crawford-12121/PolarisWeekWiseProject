# Copy this file to .env and fill in your real values.
# Required for Google Sign-In to work.

# Database (use your PostgreSQL password)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/calendar_events?schema=public"

# NextAuth - REQUIRED for sign-in
# Generate a secret: https://generate-secret.vercel.app/32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="paste-a-long-random-secret-here"

# Google OAuth - REQUIRED for "Sign in with Google"
# Get these from: https://console.cloud.google.com/ → APIs & Services → Credentials
# Create OAuth 2.0 Client ID (Web application), add redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# OpenAI (for syllabus/email extraction)
OPENAI_API_KEY="sk-your-openai-key"

# S3/MinIO (defaults work for local MinIO)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="calendar-events"
S3_REGION="us-east-1"

# Inngest (optional for local dev)
INNGEST_EVENT_KEY=""
